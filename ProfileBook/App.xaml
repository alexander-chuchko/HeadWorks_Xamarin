<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms"
             x:Class="ProfileBook.App">
<prism:PrismApplication.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{x:DynamicResource NavigationBarColor}"/>
                <Setter Property="TextColor" Value="{x:DynamicResource PageBackgroundColor}"/>
                <Setter Property="BorderColor" Value="{x:DynamicResource PageBackgroundColor}"/>
            </Style>
            <Style TargetType="Grid">
                <Setter Property="BackgroundColor"  Value="{x:DynamicResource GridColor}"/>
            </Style>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{x:DynamicResource NavigationBarColor}"/>
                <Setter Property="BarTextColor" Value="{x:DynamicResource PrimaryTextColor}"/>
            </Style>
            <Style TargetType="ContentPage"></Style>
        </ResourceDictionary>
        </prism:PrismApplication.Resources>
</prism:PrismApplication>