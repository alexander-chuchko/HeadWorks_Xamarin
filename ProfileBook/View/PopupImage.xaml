<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfileBook.View.PopupImage"
             xmlns:prism="http://prismlibrary.com"
             prism:DialogLayout.CloseOnBackgroundTapped="True"
             Background="Transparent">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="20">
        <Image Source="{Binding PathImage}" HorizontalOptions="Center" VerticalOptions="Center"></Image>
    </StackLayout>
</ContentPage>